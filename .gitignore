name: Build APK
on: [push]
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - uses: subosito/flutter-action@v2
        with:
          flutter-version: '3.10.0'
      - run: flutter pub get
      - run: flutter build apk --release
      - name: Upload APK
        uses: actions/upload-artifact@v3
        with:
          name: zor-match-app
          path: build/app/outputs/flutter-apk/app-release.apk
import 'package:flutter/material.dart';
import 'package:url_launcher/url_launcher.dart';

void main() {
  runApp(const ZorMatchApp());
}

class ZorMatchApp extends StatelessWidget {
  const ZorMatchApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'Zor Match',
      debugShowCheckedModeBanner: false,
      // ضبط اللغة العربية والاتجاه من اليمين لليسر
      home: const Directionality(
        textDirection: TextDirection.rtl,
        child: HomeScreen(),
      ),
    );
  }
}

class HomeScreen extends StatelessWidget {
  const HomeScreen({super.key});

  // قائمة المباريات (بيانات ثابتة لضمان التشغيل الفوري)
  final List<Map<String, String>> matches = const [
    {
      "home": "الوداد الرياضي",
      "away": "الرجاء الرياضي",
      "league": "البطولة الاحترافية INWI",
      "time": "20:00",
      "type": "morocco"
    },
    {
      "home": "ريال مدريد",
      "away": "برشلونة",
      "league": "الدوري الإسباني - La Liga",
      "time": "21:00",
      "type": "world"
    },
    {
      "home": "نهضة بركان",
      "away": "الجيش الملكي",
      "league": "كأس العرش المغربي",
      "time": "18:30",
      "type": "morocco"
    }
  ];

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: const Text(
          "ZOR MATCH - زور ماتش",
          style: TextStyle(color: Colors.white, fontWeight: FontWeight.bold, letterSpacing: 1.2),
        ),
        backgroundColor: const Color(0xFFC1272D), // الأحمر المغربي
        centerTitle: true,
        elevation: 10,
      ),
      body: Stack(
        children: [
          // العلامة المائية في الخلفية
          Center(
            child: Opacity(
              opacity: 0.08,
              child: Transform.rotate(
                angle: -0.5,
                child: const Text(
                  "ZOR MATCH\nZOR MATCH",
                  textAlign: TextAlign.center,
                  style: TextStyle(
                    fontSize: 60,
                    fontWeight: FontWeight.bold,
                    color: Color(0xFF006233), // الأخضر المغربي
                  ),
                ),
              ),
            ),
          ),
          // قائمة عرض المباريات
          ListView.builder(
            padding: const EdgeInsets.all(16),
            itemCount: matches.length,
            itemBuilder: (context, index) {
              return MatchCard(
                home: matches[index]['home']!,
                away: matches[index]['away']!,
                league: matches[index]['league']!,
                time: matches[index]['time']!,
                type: matches[index]['type']!,
              );
            },
          ),
        ],
      ),
    );
  }
}

class MatchCard extends StatelessWidget {
  final String home, away, league, time, type;
  const MatchCard({
    super.key,
    required this.home,
    required this.away,
    required this.league,
    required this.time,
    required this.type,
  });

  // وظيفة فتح الروابط الرسمية عند الضغط على الزر
  Future<void> _launchStream() async {
    String url = (type == "morocco")
        ? "https://snrtlive.ma/arryadia-tnt"
        : "https://connect.beinsports.com/";

    final Uri uri = Uri.parse(url);
    if (!await launchUrl(uri, mode: LaunchMode.externalApplication)) {
      throw 'Could not launch $url';
    }
  }

  @override
  Widget build(BuildContext context) {
    return Card(
      elevation: 5,
      margin: const EdgeInsets.only(bottom: 20),
      shape: RoundedRectangleBorder(
        borderRadius: BorderRadius.circular(20),
        side: const BorderSide(color: Color(0xFF006233), width: 1.5),
      ),
      child: Padding(
        padding: const EdgeInsets.all(16),
        child: Column(
          children: [
            Text(
              league,
              style: TextStyle(color: Colors.grey[600], fontSize: 14, fontWeight: FontWeight.w500),
            ),
            const SizedBox(height: 15),
            Row(
              mainAxisAlignment: MainAxisAlignment.spaceAround,
              children: [
                Expanded(child: Text(home, textAlign: TextAlign.center, style: const TextStyle(fontSize: 16, fontWeight: FontWeight.bold))),
                Container(
                  padding: const EdgeInsets.symmetric(horizontal: 12, vertical: 5),
                  decoration: BoxDecoration(color: Colors.red[50], borderRadius: BorderRadius.circular(10)),
                  child: Text(time, style: const TextStyle(color: Color(0xFFC1272D), fontWeight: FontWeight.bold)),
                ),
                Expanded(child: Text(away, textAlign: TextAlign.center, style: const TextStyle(fontSize: 16, fontWeight: FontWeight.bold))),
              ],
            ),
            const Divider(height: 30, thickness: 1),
            ElevatedButton.icon(
              onPressed: _launchStream,
              icon: const Icon(Icons.play_circle_fill, color: Colors.white),
              label: const Text("مشاهدة البث الرسمي", style: TextStyle(fontSize: 16, color: Colors.white)),
              style: ElevatedButton.styleFrom(
                backgroundColor: const Color(0xFF006233),
                minimumSize: const Size(double.infinity, 50),
                shape: RoundedRectangleBorder(borderRadius: BorderRadius.circular(12)),
              ),
            ),
          ],
        ),
      ),
    );
  }
}
